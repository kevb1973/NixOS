input {
    kb_layout = us
    kb_variant =
    kb_model =
    # kb_options = ctrl:nocaps
    kb_rules =
    follow_mouse = 1
    # focus_on_close = 1

    touchpad {
        natural_scroll = false
    }

    sensitivity = 0 # -1.0 - 1.0, 0 means no modification.
    numlock_by_default = true
}

general {

    gaps_in = 5
    gaps_out = 5
    border_size = 2
    col.active_border = rgb(007080)
    col.inactive_border = rgb(202020)
    layout = master
}

decoration {
    blur {
        enabled = false
        size = 10
        passes =1
        new_optimizations = true
        ignore_opacity = true
        noise = 0
        brightness = 0.60
    }
    active_opacity = 1.00
    inactive_opacity = 0.95
    rounding = 1
    # drop_shadow = true
    # shadow_range = 4
    # shadow_render_power = 3
    # col.shadow = rgba(1a1a1aee)
}

animations {
    enabled = yes
    bezier = wind, 0.05, 0.9, 0.1, 1.05
    bezier = winIn, 0.1, 1.1, 0.1, 1.1
    bezier = winOut, 0.3, -0.3, 0, 1
    bezier = liner, 1, 1, 1, 1
    animation = windows, 1, 5, default, popin 80%
    animation = windowsIn, 1, 5, winIn, slide top
    animation = windowsOut, 1, 5, winOut, slide bottom
    animation = windowsMove, 1, 5, wind, slide
    animation = border, 1, 1, liner
    animation = borderangle, 1, 30, liner, loop
    animation = fade, 1, 10, default
    animation = workspaces, 1, 5, default, slide
}

dwindle {
    pseudotile = true # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
    preserve_split = true # you probably want this
}

master {
    # new_status = master
    orientation = right
    special_scale_factor = 0.98
    # no_gaps_when_only = 1
    drop_at_cursor = true
}

# cursor:zoom_rigid = false
monitor=DP-3,2560x1440@165,0x0,1
misc {
    disable_hyprland_logo = true
    enable_swallow = false
    focus_on_activate = false
    swallow_regex = ^(Alacritty)$
    mouse_move_enables_dpms = true
    key_press_enables_dpms = true
    vrr = 1
}
cursor {
       persistent_warps = true
       no_hardware_cursors = false
       inactive_timeout = 2
}
debug {
    disable_logs = false
}
env = XCURSOR_SIZE,24
# Blur Waybar background
blurls = waybar

# --- Gestures{{{1
gestures {
    workspace_swipe = false
}

binds {
      workspace_back_and_forth = true
}

