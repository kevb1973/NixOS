#!/bin/bash
#
## a simple dmenu session script 
#
####

DMENU='dmenu -i -fn -xos4-terminus-medium-r-*--12-*-*-*-*-*-iso10646-1 -nb
#000000 -nf #999999 -sb #000000 -sf #31658C'
choice=$(echo -e "Logout\nRestart\nShutdown" | $DMENU)

case "$choice" in
 Logout) sudo i3-msg exit & ;;
 Restart) sudo systemctl reboot & ;;
 Shutdown) sudo systemctl poweroff & ;;
esac
