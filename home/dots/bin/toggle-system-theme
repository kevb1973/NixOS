#!/usr/bin/env bash
# set -x

scheme=$(dconf read /org/gnome/desktop/interface/color-scheme)
# 
current=${scheme//\'/}

case "$current" in
  prefer-light)
    dconf write /org/gnome/desktop/interface/color-scheme "'prefer-dark'"
    dms ipc theme dark
    ;;
  prefer-dark)
    dconf write /org/gnome/desktop/interface/color-scheme "'prefer-light'"
    dms ipc theme light
    ;;
esac
