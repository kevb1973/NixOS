#!/usr/bin/env fish

set factor (hyprctl getoption cursor:zoom_factor | grep float | awk -F " " '{print $2}')

function in
  echo "in selected"
  set factor (math $factor + .2)
  if test $factor -le 3.00000
    hyprctl keyword cursor:zoom_factor $factor
  end
end

function out
  echo 'out selected'
  set factor (math $factor - .2)
  if test $factor -ge 0.00000
    hyprctl keyword cursor:zoom_factor $factor
  end
end

function reset
  echo "reset selected"
  hyprctl keyword cursor:zoom_factor 1.0
end

switch $argv
  case in
    in ()
  case out
    out ()
  case reset
    reset ()
end

