#!/usr/bin/env bash

echo "----------------"
echo "Updating Servers"
echo "----------------"
podman compose -f ~/Code/podman/silverbullet/compose.yml down --rmi all
podman compose -f ~/Code/podman/silverbullet/compose.yml up -d
podman compose -f ~/Code/podman/miniflux/compose.yml down --rmi all
podman compose -f ~/Code/podman/miniflux/compose.yml up -d
podman compose -f ~/Code/podman/openweb-ui/compose.yml down --rmi all
podman compose -f ~/Code/podman/openweb-ui/compose.yml up -d
